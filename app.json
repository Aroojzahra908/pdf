{
  "expo": {
    "name": "Smart PDF",
    "slug": "smart-pdf",
    "version": "1.0.0",
    "scheme": "smartpdf",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.smartpdf.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Smart PDF to access your photos",
        "NSCameraUsageDescription": "Allow Smart PDF to scan documents with camera"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.smartpdf.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Smart PDF to access your photos to save scanned documents.",
          "savePhotosPermission": "Allow Smart PDF to save scanned PDFs to your photo library."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Smart PDF to access your camera to scan documents."
        }
      ]
    ]
  }
}
